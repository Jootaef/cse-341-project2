{
  "swagger": "2.0",
  "info": {
    "title": "Items API - CSE 341 Project",
    "description": "RESTful API for managing items using Node.js and MongoDB. Created by Jaydan Valencia for the CSE 341 course project.",
    "version": "1.0.0"
  },
  "host": "cse-341-project2-qtpb.onrender.com",
  "basePath": "/",
  "schemes": ["https"],
  "paths": {
    "/": {
      "get": {
        "tags": ["Home"],
        "summary": "Welcome message",
        "responses": {
          "200": {
            "description": "API is running"
          }
        }
      }
    },
    "/items/": {
      "get": {
        "tags": ["Items"],
        "summary": "Get all items",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "List of items"
          }
        }
      },
      "post": {
        "tags": ["Items"],
        "summary": "Create a new item",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "productType": { "type": "string", "example": "Beverage" },
                "productBrand": { "type": "string", "example": "Coca-Cola" },
                "productName": { "type": "string", "example": "Coca-Cola Zero" },
                "weightPerUnit": { "type": "string", "example": "355ml" },
                "pricePerUnit": { "type": "number", "example": 1.25 },
                "sellingPrice": { "type": "number", "example": 1.99 },
                "expirationDate": { "type": "string", "example": "2025-12-31" }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Item created successfully"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/items/{id}": {
      "get": {
        "tags": ["Items"],
        "summary": "Get item by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Item data returned"
          },
          "404": {
            "description": "Item not found"
          }
        }
      },
      "put": {
        "tags": ["Items"],
        "summary": "Update item by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "productType": { "type": "string", "example": "Snack" },
                "productBrand": { "type": "string", "example": "Lay's" },
                "productName": { "type": "string", "example": "Lay's BBQ" },
                "weightPerUnit": { "type": "string", "example": "150g" },
                "pricePerUnit": { "type": "number", "example": 1.5 },
                "sellingPrice": { "type": "number", "example": 2.0 },
                "expirationDate": { "type": "string", "example": "2025-10-10" }
              }
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Item updated successfully"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "tags": ["Items"],
        "summary": "Delete item by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": {
            "description": "Item deleted successfully"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  }
}
